 <link rel="stylesheet" href="/stylesheets/details.css">
<div class="flex-container">
    <div class="image">
    <img src="{{details.image}}" alt="{{details.title}}">
    </div>
    
    <div class="details">
    <a href="/movies">Go back</a>
    <h3>{{details.title}}</h3>
    <h4>Director: {{details.director}}</h4>
    <h5>Stars</h5>
     {{#each details.stars}}
        <ul>
         <li>{{this}}</li>  
        </ul>
     {{/each}}
    <p>
        {{details.description}}
    </p>
    {{#each details.showtimes}} 
    <div class="showtimes">
    <p> 
       {{this}} |
    </p>
     {{/each}}
     </div>
    </div>
</div>
